{
  "AWSTemplateFormatVersion" : "2010-09-09",

  "Description" : "The template creates the RDS instance for lab #1 project.",

  "Parameters" : {

    "VpcId" : {
      "Type" : "String",
      "Description" : "VpcId of the existing Virtual Private Cloud (VPC)"
    },

    "PriASubnetId" : {
      "Type" : "String",
      "Description" : "SubnetId of an existing Private A facing subnet in your Virtual Private Cloud (VPC)"
    },

    "PriBSubnetId" : {
      "Type" : "String",
      "Description" : "SubnetId of an existing Private B facing subnet in your Virtual Private Cloud (VPC)"
    },

    "DBName": {
      "Default": "WordPress",
      "Description" : "Database name",
      "Type": "String",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[a-zA-Z][a-zA-Z0-9]*",
      "ConstraintDescription" : "must begin with a letter and contain only alphanumeric characters."
    },

    "DBUsername": {
      "Default": "admin",
      "Description" : "Database admin username",
      "Type": "String",
      "MinLength": "1",
      "MaxLength": "16",
      "AllowedPattern" : "[a-zA-Z][a-zA-Z0-9]*",
      "ConstraintDescription" : "must begin with a letter and contain only alphanumeric characters."
    },

    "DBPassword": {
      "Default": "superpassword",
      "NoEcho": "true",
      "Description" : "Database admim password",
      "Type": "String",
      "MinLength": "8",
      "MaxLength": "41",
      "ConstraintDescription" : "Minimum of 8 characters"
    }
  },

  "Resources" : {

    "DBSubnetGroup" : {
      "Type" : "AWS::RDS::DBSubnetGroup",
      "Properties" : {
        "DBSubnetGroupDescription" : "Subnets available for the RDS DB Instance",
        "SubnetIds" : [{ "Ref" : "PriASubnetId" },{ "Ref" : "PriBSubnetId" }],
        "Tags": [
          {"Key": "Name","Value": "Wordpress DB Subnet Group"},
          {"Key": "Project","Value": "WordPress Site"}
        ]
      }
    },

    "DBEC2SecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties" : {
        "GroupDescription": "Open MySQL for access from VPC",
        "VpcId" : { "Ref" : "VpcId" },
        "SecurityGroupIngress" : [
          {"IpProtocol" : "tcp", "FromPort" : "3306", "ToPort" : "3306", "CidrIp": "172.30.0.0/16"}
        ],
        "Tags": [
          {"Key": "Name","Value": "Wordpress DB Security Group"},
          {"Key": "Project","Value": "WordPress Site"}
        ]
      }
    },

    "WordPressDB" : {
      "Type" : "AWS::RDS::DBInstance",
      "DeletionPolicy" : "Snapshot",
      "Properties" : {
        "DBName" : { "Ref" : "DBName" },
        "DBInstanceIdentifier" : { "Ref" : "DBName" },
        "AllocatedStorage" : "25",
        "DBInstanceClass" : "db.t2.small",
        "Engine" : "MySQL",
        "EngineVersion" : "5.6",
        "MultiAZ" : "true",
        "MasterUsername" : { "Ref" : "DBUsername" } ,
        "MasterUserPassword" : { "Ref" : "DBPassword" },
        "DBSubnetGroupName" : { "Ref" : "DBSubnetGroup" },
        "VPCSecurityGroups" : [ { "Fn::GetAtt": [ "DBEC2SecurityGroup", "GroupId" ] } ],
        "Tags": [
          {"Key": "Name","Value": "Wordpress MySQL RDS"},
          {"Key": "Project","Value": "WordPress Site"}
        ]
      }
    }
  },

  "Outputs" : {
    "DBConnectionName" : {
       "Value" : { "Fn::GetAtt": [ "WordPressDB", "Endpoint.Address" ] },
       "Description" : "DNS name for this RDS instance."
    },

    "DatabaseName" : {
       "Value" : { "Ref": "DBName" },
       "Description" : "Name of pre-created database"
    }
  }
}
